    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        Guardar();
        cargatXPEDIDO();
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       String dat=IDP.getSelectedItem().toString();
        Eliminar(dat);
        cargatXPEDIDO();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       IDP.removeAllItems();
        cargarcombo();
       IDART.removeAllItems();
       cargarcodigo();
       CANT.setText(null);
       VALOR.setText(null);
    }                                        

    private void CANTKeyTyped(java.awt.event.KeyEvent evt) {                              
        char c=evt.getKeyChar();
     if (!Character.isDigit(c)){
         evt.consume();
    }                   
    }                             

    private void VALORKeyTyped(java.awt.event.KeyEvent evt) {                               
      char c=evt.getKeyChar();
     if (!Character.isDigit(c)){
         evt.consume();
    }                   
    }                              

    private void IDPKeyPressed(java.awt.event.KeyEvent evt) {                               
        if(evt.getKeyCode()==evt.VK_ENTER){
        IDART.requestFocus();
    }                            
    }                              

    private void IDARTKeyPressed(java.awt.event.KeyEvent evt) {                                 
        if(evt.getKeyCode()==evt.VK_ENTER){
        CANT.requestFocus();
    }                            
    }                                

    private void CANTKeyPressed(java.awt.event.KeyEvent evt) {                                
         if(evt.getKeyCode()==evt.VK_ENTER){
        VALOR.requestFocus();
    }                            
    }                               

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    String p,a,c,v;
    p=IDP.getSelectedItem().toString();
    a=IDART.getSelectedItem().toString();
    c=CANT.getText();
    v=VALOR.getText();
        modificar(p, a, c, v);
        cargatXPEDIDO();
    }                                        

    private void IDPActionPerformed(java.awt.event.ActionEvent evt) {                                    
        // TODO add your handling code here:
    }                                   

    private void xpedidoMouseClicked(java.awt.event.MouseEvent evt) {                                     
       listardatos();
    }                                    


